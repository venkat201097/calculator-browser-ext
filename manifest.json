{
    "manifest_version": 2,
    "name": "Calculator tool",
    "version": "1.0",

    "description": "Simple calculator tool for quick use.",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Simple Calculator",
        "default_popup": "src/view.html"
    },
    "permissions": [
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; script-src-attr 'unsafe-hashes' 'unsafe-inline'"
}